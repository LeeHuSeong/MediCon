<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane  xmlns="http://javafx.com/javafx/21"
             xmlns:fx="http://javafx.com/fxml/1"
             stylesheets="@../../../style/ComponentStyle.css"
            fx:controller="com.medicon.medicon.controller.patient.PerInfoController"
            prefHeight="400.0" prefWidth="600.0">

    <HBox spacing="10" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20">
        <!-- 개인정보 -->
        <VBox prefHeight="1000.0" prefWidth="500.0" minWidth="350" spacing="10" AnchorPane.bottomAnchor="20.0" AnchorPane.topAnchor="20.0">
            <Label maxWidth="Infinity" styleClass="section-title" text="환자 정보">
            </Label>
            <GridPane hgap="10" prefHeight="941.0" prefWidth="353.0" vgap="10">
                <Label styleClass="form-label" text="이름" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" styleClass = "text-field" prefHeight="35.0" prefWidth="219.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label styleClass="form-label" text="성별" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                <HBox fx:id="gender" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" spacing="10">

                    <RadioButton fx:id="btn_male" text="남자">
<!--                        <toggleGroup>-->
<!--                            <fx:reference source="genderToggleGroup"/>-->
<!--                        </toggleGroup>-->
                    </RadioButton>

                    <RadioButton fx:id="btn_female" text="여자">
<!--                        <toggleGroup>-->
<!--                            <fx:reference source="genderToggleGroup"/>-->
<!--                        </toggleGroup>-->
                    </RadioButton>
                </HBox>

                <Label styleClass="form-label" text="생년월일" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                <TextField fx:id="birthField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label styleClass="form-label" text="휴대전화" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                <TextField fx:id="phoneField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label styleClass="form-label" text="이메일" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                <TextField fx:id="emailField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label styleClass="form-label" text="주소" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
                <TextField fx:id="addressField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label styleClass="form-label" text="상세주소" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
                <TextField fx:id="detailAddressField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <VBox.margin>
                    <Insets left="20.0" right="20"/>
                </VBox.margin>
            </GridPane>
            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Button fx:id="changePatientButton" styleClass="button-blue" text="환자 정보 변경" onAction="#handleChangePatient" >
                        <HBox.margin>
                            <Insets right="10.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="updatePatientButton" styleClass="button-lightblue" text="완료" onAction="#handleUpdatePatient"/>
                </children>
            </HBox>
        </VBox>
        <!-- 예약 목록 -->
        <VBox prefWidth="500.0" HBox.hgrow="ALWAYS" minWidth="350" spacing="10">
            <Label maxWidth="Infinity" text="예약 목록" styleClass="section-title" />
            <TextArea fx:id="reservationList" editable="false" wrapText="true" />
        </VBox>

        <VBox minWidth="400" spacing="10">
            <Label maxWidth="Infinity" text="예약하기" styleClass="section-title"  />
            <!-- 날짜 선택 -->
            <DatePicker fx:id="datePicker" />
             <!-- 시간 선택 -->
            <ScrollPane styleClass="background" hbarPolicy="NEVER" prefWidth="430">
                <content>
                    <VBox spacing="10" alignment="CENTER" styleClass="background">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <Label text="오전" styleClass="time-section-label"/>
                        <FlowPane hgap="10" vgap="5">
                            <Button text="09:00" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="09:10" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="09:20" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="09:30" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="09:40" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="09:50" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="10:00" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="10:10" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="10:20" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="10:30" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="10:40" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="10:50" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="11:00" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="11:10" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="11:20" styleClass="time-button" onAction="#selectTime"/>

                            <!-- ... -->
                        </FlowPane>
                        <Label text="오후" styleClass="time-section-label" />
                        <FlowPane hgap="10" vgap="5">
                            <Button text="13:00" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="13:10" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="13:20" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="13:30" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="13:40" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="13:50" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="14:00" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="14:10" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="14:20" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="14:30" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="14:40" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="14:50" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="15:00" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="15:10" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="15:20" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="15:30" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="15:40" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="15:50" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="16:00" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="16:10" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="16:20" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="16:30" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="16:40" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="16:50" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="17:00" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="17:10" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="17:20" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="17:30" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="17:40" styleClass="time-button" onAction="#selectTime"/>
                            <Button text="17:50" styleClass="time-button" onAction="#selectTime"/>
                            <!-- ... -->
                        </FlowPane>
                    </VBox>
                </content>
            </ScrollPane>
            <!-- New Label to display selected time -->
            <Label fx:id="selectedTimeDisplayLabel" text="" styleClass="form-label" />
            <Button fx:id="reserveButton" text="예약하기" styleClass="button-blue" onAction="#handleReservation"/>
        </VBox>

    </HBox>
</AnchorPane>