<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450" prefWidth="600" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.medicon.medicon.controller.salary.SalaryRegisterController">

    <VBox alignment="CENTER" layoutY="-1.0" prefHeight="450.0" prefWidth="600.0" spacing="15" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="-1.0">
        <Label alignment="CENTER" prefHeight="31.0" prefWidth="190.0" style="-fx-font-size: 20;" text="단일 급여 지급">
         <font>
            <Font name="System Bold" size="25.0" />
         </font></Label>
      <Line endX="600.0000610351562" endY="51.0" startY="51.0" />

        <HBox prefHeight="35.0" prefWidth="602.0" spacing="10">
            <Label prefHeight="29.0" prefWidth="144.0" text="직원 검색:">
            <font>
               <Font name="System Bold" size="25.0" />
            </font></Label>
            <ComboBox fx:id="uidComboBox" prefHeight="28.0" prefWidth="216.0" />
        </HBox>

        <!-- 직급(Label) 추가 -->
        <HBox prefHeight="34.0" prefWidth="602.0" spacing="10">
            <Label prefHeight="39.0" prefWidth="80.0" text="직급:">
            <font>
               <Font name="System Bold" size="25.0" />
            </font></Label>
            <Label fx:id="rankLabel" text="-" textAlignment="CENTER">
            <font>
               <Font size="20.0" />
            </font></Label>
        </HBox>

        <HBox prefHeight="40.0" prefWidth="602.0" spacing="10">
            <Label prefHeight="29.0" prefWidth="161.0" text="지급 연도/월:">
            <font>
               <Font name="System Bold" size="25.0" />
            </font></Label>
            <ComboBox fx:id="payMonthComboBox" prefHeight="27.0" prefWidth="207.0" />
        </HBox>


        <HBox prefHeight="41.0" prefWidth="602.0" spacing="10">
            <Label prefHeight="24.0" prefWidth="86.0" text="기본급:">
            <font>
               <Font name="System Bold" size="25.0" />
            </font></Label>
            <TextField fx:id="basePayField" prefHeight="34.0" prefWidth="200.0" promptText="예: 3000000" />
        </HBox>

        <HBox prefHeight="44.0" prefWidth="602.0" spacing="10">
            <Label prefHeight="29.0" prefWidth="86.0" text="보너스:">
            <font>
               <Font name="System Bold" size="25.0" />
            </font></Label>
            <TextField fx:id="bonusField" prefHeight="35.0" prefWidth="200.0" promptText="예: 500000" />
        </HBox>

        <Button alignment="CENTER" contentDisplay="TOP" onAction="#handleRegisterSalary" prefHeight="40.0" prefWidth="109.0" text="저장" />
    </VBox>
</AnchorPane>
