<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.medicon.medicon.controller.staff.RegisterController"
            prefWidth="1000" prefHeight="700"
            stylesheets="@../../../style/staff/RegisterStyle.css">

    <VBox layoutX="80" layoutY="40" spacing="30">

        <!-- 기본 정보 입력 -->
        <VBox spacing="15" styleClass="section-box">
            <Label text="기본 정보 입력" styleClass="section-title"/>
            <HBox spacing="20">
                <TextField fx:id="nameField" promptText="이름 입력" styleClass="input-field"/>
                <TextField fx:id="emailField" promptText="이메일 입력" styleClass="input-field"/>
            </HBox>
            <HBox spacing="20">
                <PasswordField fx:id="passwordField" promptText="비밀번호 입력" styleClass="input-field"/>
                <TextField fx:id="phoneField" promptText="전화번호 입력" styleClass="input-field"/>
            </HBox>
        </VBox>

        <!-- 역할 선택 -->
        <VBox spacing="10" styleClass="section-box">
            <Label text="역할 선택" styleClass="section-title"/>
            <HBox spacing="20">
                <Button fx:id="doctorButton" text="의사" onAction="#handleDoctorSelect" styleClass="role-button"/>
                <Button fx:id="nurseButton" text="간호사" onAction="#handleNurseSelect" styleClass="role-button"/>
            </HBox>
        </VBox>

        <!-- 직급 선택 -->
        <VBox spacing="10" styleClass="section-box">
            <Label text="직급 선택:" styleClass="section-title"/>
            <TilePane fx:id="rankPane" hgap="10" vgap="10" prefColumns="4" styleClass="tile-pane"/>
        </VBox>

        <!-- 진료과 선택 -->
        <VBox spacing="10" styleClass="section-box">
            <Label text="진료과 선택:" styleClass="section-title"/>
            <TilePane fx:id="departmentPane" hgap="10" vgap="10" prefColumns="4" styleClass="tile-pane"/>
        </VBox>

        <!-- 등록 버튼 -->
        <HBox alignment="CENTER_RIGHT">
            <Button text="등록" onAction="#handleRegister" styleClass="submit-button"/>
        </HBox>
    </VBox>
</AnchorPane>
