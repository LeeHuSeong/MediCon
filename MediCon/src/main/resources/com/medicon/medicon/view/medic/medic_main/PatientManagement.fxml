<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@button.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medicon.medicon.controller.PatientManagementController">

    <!-- 좌측 패널 -->
    <VBox layoutX="14.0" layoutY="20.0" prefHeight="673.0" prefWidth="274.0" spacing="10">
        <Button fx:id="registerPatientButton" prefHeight="53.0" prefWidth="275.0" styleClass="button-blue" text="신규 고객 등록"/> <!-- onAction="#handleRegisterPatient" -->
        <Button fx:id="todayPatientButton" prefHeight="53.0" prefWidth="282.0" styleClass="button-blue" text="금일 고객 조회"/> <!-- onAction="#handleTodayPatients" -->

        <HBox spacing="5">
            <TextField fx:id="searchField" prefHeight="47.0" prefWidth="182.0" promptText="환자 이름" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" prefHeight="31.0" prefWidth="93.0" styleClass="button-blue" text="검색"/> <!-- onAction="#handleSearch" -->
        </HBox>

        <ListView fx:id="patientListView" prefHeight="445.0" prefWidth="274.0" VBox.vgrow="ALWAYS" />
    </VBox>

    <!-- 중앙 정보 -->
    <VBox layoutX="308.0" layoutY="20.0" prefHeight="374.0" prefWidth="331.0" spacing="10">
        <Label maxWidth="Infinity" styleClass="section-title" text="환자 정보">
            <font><Font name="Bodoni MT Bold" size="29.0" /></font>
        </Label>
        <GridPane hgap="10" prefHeight="243.0" prefWidth="331.0" vgap="10">
            <Label styleClass="form-label" text="이름" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label styleClass="form-label" text="성별" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
            <TextField fx:id="genderField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label styleClass="form-label" text="생년월일" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <TextField fx:id="birthField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label styleClass="form-label" text="휴대전화" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label styleClass="form-label" text="이메일" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label styleClass="form-label" text="주소" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
            <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label styleClass="form-label" text="상세주소" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
            <TextField fx:id="detailAddressField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
        <Button fx:id="updatePatientButton" prefHeight="51.0" prefWidth="239.0" styleClass="button-blue" text="환자 정보 변경"> <!-- onAction="#handleUpdatePatient" -->
        <font><Font name="LG Smart UI Bold" size="12.0" /></font>
    </Button>
</VBox>

        <!-- 오른쪽 패널: 예약 일정 -->
<VBox layoutX="658.0" layoutY="20.0" prefHeight="356.0" prefWidth="282.0" spacing="10">
<Label maxWidth="Infinity" styleClass="section-title" text="예약 일정" />
<GridPane hgap="10" prefHeight="190.0" prefWidth="282.0" vgap="10">
    <Label styleClass="form-label" text="날짜" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
    <Label fx:id="dateLabel" text="2024-07-03" GridPane.columnIndex="1">
        <font><Font size="20.0" /></font>
    </Label>

    <Label styleClass="form-label" text="시간" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
    <Label fx:id="timeLabel" text="07 : 30" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <font><Font size="20.0" /></font>
    </Label>

    <Label styleClass="form-label" text="진료과" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
    <Label fx:id="departmentLabel" text="흉부외과" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <font><Font size="20.0" /></font>
    </Label>

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>
</VBox>

        <!-- 오른쪽 패널: 문진 기록 -->
<VBox layoutX="957.0" layoutY="20.0" prefHeight="356.0" prefWidth="300.0">
<children>
    <Label maxWidth="Infinity" styleClass="section-title" text="문진 기록" />
    <GridPane hgap="10" prefHeight="118.0" prefWidth="279.0" vgap="10">
        <Label styleClass="form-label" text="주 증상" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
        <Label fx:id="symptomLabel" text="목 부음" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <font><Font size="20.0" /></font>
        </Label>

        <Label styleClass="form-label" text="과거 병력" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
        <Label fx:id="historyLabel" text="코로나" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <font><Font size="20.0" /></font>
        </Label>

        <Label styleClass="form-label" text="알레르기" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
        <Label fx:id="allergyLabel" text="갑각류" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <font><Font size="20.0" /></font>
        </Label>

        <Label styleClass="form-label" text="복용약" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
        <Label fx:id="medicationLabel" text="텐텐" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <font><Font size="20.0" /></font>
        </Label>

        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
        <padding><Insets top="10.0" /></padding>
    </GridPane>
</children>
</VBox>

        <!-- 하단 패널: 방문 이력 -->
<VBox layoutX="308.0" layoutY="392.0" prefHeight="294.0" prefWidth="951.0">
<children>
    <Label maxWidth="Infinity" prefHeight="53.0" prefWidth="244.0" styleClass="section-title" text="방문 이력 조회" />
    <ScrollPane fx:id="historyScrollPane" prefHeight="241.0" prefWidth="605.0">
        <content>
            <VBox fx:id="historyContainer" prefHeight="238.0" prefWidth="709.0">
                <!-- 방문 이력 Label들은 Java 코드에서 동적으로 추가됨 -->
            </VBox>
        </content>
    </ScrollPane>
</children>
</VBox>
        </AnchorPane>
