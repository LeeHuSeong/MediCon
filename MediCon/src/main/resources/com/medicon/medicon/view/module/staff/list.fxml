<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.medicon.medicon.controller.staff.ListController"
      spacing="20" alignment="TOP_LEFT" padding="20">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="역할:" />
        <ComboBox fx:id="roleComboBox" prefWidth="150"/>
        <Label text="이름:" />
        <TextField fx:id="nameField" promptText="이름 검색" prefWidth="150"/>
        <Button text="검색" onAction="#onSearch"/>
    </HBox>

    <TableView fx:id="staffTable" prefHeight="500" prefWidth="700">
        <columns>
            <TableColumn fx:id="nameColumn" text="이름" prefWidth="120"/>
            <TableColumn fx:id="roleColumn" text="역할" prefWidth="100"/>
            <TableColumn fx:id="rankColumn" text="직급" prefWidth="150"/>
            <TableColumn fx:id="departmentColumn" text="진료과" prefWidth="150"/>
            <TableColumn fx:id="phoneColumn" text="전화번호" prefWidth="150"/>
        </columns>
    </TableView>
</VBox>
