<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane styleClass="background" stylesheets="@ComponentStyle.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medicon.medicon.controller.PatientManagementController">

    <HBox spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20.0">
        <!-- 맨 왼쪽 패널 -->
        <VBox minWidth="210" prefWidth="280.0" spacing="10">
            <Button fx:id="registerPatientButton" prefHeight="53.0" prefWidth="275.0" styleClass="button-blue" text="전체 환자 조회" /> <!-- onAction="#handleRegisterPatient" -->
            <Button fx:id="todayPatientButton" prefHeight="53.0" prefWidth="282.0" styleClass="button-blue" text="금일 문진 조회" /> <!-- onAction="#handleTodayPatients" -->

            <HBox spacing="5">
                <TextField fx:id="searchField" prefHeight="47.0" prefWidth="182.0" promptText="환자 이름" styleClass="text-field" HBox.hgrow="ALWAYS" />
                <Button fx:id="searchButton" minWidth="90.0" prefHeight="31.0" prefWidth="93.0" styleClass="button-blue" text="검색" /> <!-- onAction="#handleSearch" -->
            </HBox>

            <ListView fx:id="patientListView" prefHeight="445.0" prefWidth="274.0" VBox.vgrow="ALWAYS" />
        </VBox>
        <!-- 가운데 패널: 최근 문진 -->
        <VBox minWidth="300" spacing="10">
            <children>
                <Label maxWidth="Infinity" styleClass="section-title" text="최근 문진" />
                <GridPane hgap="10" prefHeight="578.0" prefWidth="700.0" vgap="10">
                    <Label styleClass="form-labelBig" text="2025.07.29" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
                    <Label fx:id="symptomLabel" styleClass="form-labelBig" text="감기인가 코로나인가 그것이 문제로다" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label styleClass="form-labelBig" text="과거 병력 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                    <Label fx:id="historyLabel" styleClass="form-labelBig" text="코로나" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label styleClass="form-labelBig" text="현재 증상 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                    <HBox fx:id="symptoms" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                        <CheckBox text="기침  " />
                        <CheckBox text="발열  " />
                        <CheckBox text="가래  " />
                        <CheckBox text="두통  " />
                        <CheckBox text="복통  " />
                    </HBox>
                    <Label styleClass="form-labelBig" text="기타 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                    <TextArea fx:id="symytomElse" editable="false" text="현재 증상의 기타 부분" prefRowCount="2" wrapText="true"
                              GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />

                    <Label styleClass="form-labelBig" text="증상시작시점 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                    <HBox fx:id="onsetOfSymptoms" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                        <RadioButton text="오늘  " />
                        <RadioButton text="어제  " />
                        <RadioButton text="3일 전  " />
                        <RadioButton text="일주일 전  " />
                        <RadioButton text="기타  " />
                    </HBox>
                    <Label styleClass="form-labelBig" text="기타 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
                    <TextArea fx:id="onsetOfSymptomsElse" editable="false" text="증상시작시점의 기타 부분"  prefRowCount="2" wrapText="true"
                              GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />


                     <Label styleClass="form-labelBig" text="알레르기 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
                    <Label fx:id="allergyLabel" styleClass="form-labelBig" text="갑각류" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                    <Label styleClass="form-labelBig" text="복용 중인 약 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="7" />
                    <Label fx:id="medicationLabel" styleClass="form-labelBig" text="텐텐" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                    <VBox.margin>
                        <Insets left="20.0" right="20" />
                    </VBox.margin>
                   <columnConstraints>
                      <ColumnConstraints maxWidth="185" minWidth="165" prefWidth="172" />
                      <ColumnConstraints maxWidth="525" minWidth="505" prefWidth="517" />
                   </columnConstraints>
                </GridPane>
            </children>
        </VBox>
        <!-- 오른쪽 패널: 과거 문진 내역 -->
        <VBox minWidth="300" spacing="10">
            <children>
                <Label maxWidth="Infinity" styleClass="section-title" text="과거 문진 내역" />
                <ListView fx:id="historyQuestionnaireListView" prefHeight="331.0" prefWidth="600.0" />
            </children>
        </VBox>
    </HBox>
</AnchorPane>
