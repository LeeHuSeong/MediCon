<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.medicon.medicon.controller.sale.SalesViewController"
            prefWidth="800" prefHeight="600"
            style="-fx-padding: 20;">

    <!-- 상단 제목 -->
    <top>
        <Label text="📊 매출 조회" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    </top>

    <!-- 좌측: 당일 매출 -->
    <left>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="당일 매출" style="-fx-font-size: 18px;"/>
            <Label fx:id="dailySalesLabel" text="₩0" style="-fx-font-size: 20px; -fx-text-fill: green;"/>
        </VBox>
    </left>

    <!-- 우측: 월별 매출 -->
    <center>
        <VBox spacing="10">
            <Label text="월별 매출" style="-fx-font-size: 18px;" />
            <TableView fx:id="monthlySalesTable" prefHeight="400" prefWidth="600">
                <columns>
                    <TableColumn fx:id="monthColumn" text="월" prefWidth="100"/>
                    <TableColumn fx:id="amountColumn" text="매출액" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>
