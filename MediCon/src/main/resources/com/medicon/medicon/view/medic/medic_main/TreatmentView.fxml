<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="background" stylesheets="@../../../style/ComponentStyle.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medicon.medicon.controller.medic.TreatmentManagementController">
    <VBox spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20.0">
        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <!-- 맨 왼쪽 패널 -->
            <VBox minWidth="210" prefWidth="300.0" spacing="10">
                <Button fx:id="registerPatientButton" prefHeight="53.0" prefWidth="275.0" styleClass="button-blue" text="예약 환자 조회" />

                <HBox spacing="5">
                    <TextField fx:id="searchField" prefHeight="47.0" prefWidth="182.0" promptText="환자 이름" styleClass="text-field" HBox.hgrow="ALWAYS" />
                    <Button fx:id="searchButton" minWidth="90.0" prefHeight="31.0" prefWidth="93.0" styleClass="button-blue" text="검색" />
                </HBox>

                <ListView fx:id="patientListView" prefHeight="445.0" prefWidth="274.0" VBox.vgrow="ALWAYS" />
            </VBox>
            <!-- 오른쪽 패널 -->
            <VBox spacing="10">
                <StackPane maxWidth="Infinity" styleClass="section-title-bar">
                    <!-- 가운데 중앙 제목 -->
                    <Label styleClass="section-title" text="진료 차트" StackPane.alignment="CENTER" />
                    <!-- 오른쪽 위 작성자 정보 -->
                    <AnchorPane pickOnBounds="false" StackPane.alignment="TOP_RIGHT">
                        <HBox alignment="CENTER_RIGHT" spacing="5" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="1">
                            <Label styleClass="form-label" text="작성자 :" />
                            <Label styleClass="form-label" text="의사" />
                            <TextField prefWidth="100" promptText="이름" />
                        </HBox>
                    </AnchorPane>
                </StackPane>

                <HBox maxWidth="Infinity" spacing="20">
                    <!--                    이름-->
                    <HBox HBox.hgrow="ALWAYS">
                        <Label styleClass="form-labelBig" text="이름 :" />
                        <Label fx:id="patientNameLabel" styleClass="form-labelBig" text="" />
                    </HBox>
                    <!--                    성별-->
                    <HBox HBox.hgrow="ALWAYS">
                        <Label styleClass="form-labelBig" text="성별 :" />
                        <Label fx:id="patientGenderLabel" styleClass="form-labelBig" text="" />
                    </HBox>
                    <!--                    나이-->
                    <HBox HBox.hgrow="ALWAYS">
                        <Label styleClass="form-labelBig" text="나이 :" />
                        <Label fx:id="patientAgeLabel" styleClass="form-labelBig" text="" />
                    </HBox>
                    <!--                    휴대전화-->
                    <HBox HBox.hgrow="ALWAYS">
                        <Label styleClass="form-labelBig" text="휴대전화 :" />
                        <Label fx:id="patientPhoneLabel" styleClass="form-labelBig" text="" />
                    </HBox>
                    <!--                    과거 진료이력버튼-->
                    <Button styleClass="button-blue-small" text="과거진료이력" HBox.hgrow="ALWAYS" />
                </HBox>
                <HBox spacing="20">
                    <!-- 가운데 패널: 최근 문진 -->
                    <VBox minWidth="300" prefWidth="700" spacing="10">
                        <Label maxWidth="Infinity" styleClass="section-title" text="최근 문진" />
                        <GridPane hgap="10" maxWidth="Infinity" prefHeight="578.0" vgap="10" VBox.vgrow="ALWAYS">
                            <Label fx:id="interviewDateLabel" styleClass="form-labelBig" text="" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
                            <Label fx:id="symptomLabel" styleClass="form-labelBig" text="" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label styleClass="form-labelBig" text="과거 병력 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                            <Label fx:id="historyLabel" styleClass="form-labelBig" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label styleClass="form-labelBig" text="현재 증상 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                            <HBox fx:id="symptoms" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                                <CheckBox text="기침  " />
                                <CheckBox text="발열  " />
                                <CheckBox text="가래  " />
                                <CheckBox text="두통  " />
                                <CheckBox text="복통  " />
                                <CheckBox text="기타  " />
                            </HBox>

                            <Label styleClass="form-labelBig" text="증상시작시점 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                            <HBox fx:id="onsetOfSymptoms" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                                <RadioButton fx:id="Radio1" text="오늘  " />
                                <RadioButton fx:id="Radio2" text="어제  " />
                                <RadioButton fx:id="Radio3" text="3일 전  " />
                                <RadioButton fx:id="Radio4" text="일주일 전  " />
                                <RadioButton fx:id="Radio5" text="기타  " />
                            </HBox>
                            <Label styleClass="form-labelBig" text="알레르기 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                            <Label fx:id="allergyLabel" styleClass="form-labelBig" text="" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                            <Label styleClass="form-labelBig" text="복용 중인 약 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
                            <Label fx:id="medicationLabel" styleClass="form-labelBig" text="" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                            <Label styleClass="form-labelBig" text="기타" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="6" />
                            <TextArea fx:id="symytomElse" prefRowCount="2" wrapText="true" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="7" />

                            <VBox.margin>
                                <Insets left="20.0" right="20" />
                            </VBox.margin>
                        </GridPane>
                    </VBox>
                    <!-- 오른쪽 패널: 진단 -->
                    <VBox minWidth="300" prefWidth="700" spacing="10">
                        <Label maxWidth="Infinity" styleClass="section-title" text="진단" />
                        <GridPane hgap="10" maxWidth="Infinity" prefHeight="578.0" vgap="10" VBox.vgrow="ALWAYS">
                            <Label styleClass="form-label" text="내원 목적 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
                            <TextField styleClass="form-label" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label styleClass="form-label" text="진단 명 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                            <TextField styleClass="form-label" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label styleClass="form-label" text="진로 소견 및 특이사항" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
                            <TextArea prefHeight="124.0" prefWidth="666.0" GridPane.columnSpan="2" GridPane.halignment="LEFT" GridPane.rowIndex="3" />

                            <Label styleClass="form-label" text="첨부된 파일" GridPane.columnIndex="0" GridPane.halignment="LEFT" GridPane.rowIndex="4" />
                            <TextArea GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="LEFT" GridPane.rowIndex="5" />
                            <VBox.margin>
                                <Insets left="20.0" right="20" />
                            </VBox.margin>
                        </GridPane>
                        <HBox alignment="CENTER_RIGHT">
                            <Button text="파일 첨부" styleClass="button-blue" />
                        </HBox>
                    </VBox>
                </HBox>
            </VBox>
        </HBox>
        <HBox maxHeight="150" spacing="40" VBox.vgrow="NEVER">
            <HBox spacing="10">
                <Button styleClass="button-blue" text="진료확인서" fx:id="medicalCertificateBtn" onAction="#handleMedicalCertificate"/>
                <Button styleClass="button-blue" text="진단서" />
                <Button styleClass="button-blue" text="처방전" />
                <Button styleClass="button-blue" text="진료소견서" />
                <Button styleClass="button-blue" text="진료의뢰서" />
            </HBox>
            <!-- 중간 빈 공간 -->
            <Region HBox.hgrow="ALWAYS" />
            <HBox spacing="10">
                <Button styleClass="button-lightblue" text="임시저장" />
                <Button styleClass="button-blue" text="변경사항저장" />
            </HBox>
        </HBox>
    </VBox>
</AnchorPane>
