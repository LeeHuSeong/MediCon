<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane styleClass="background" stylesheets="@../../../style/ComponentStyle.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.medicon.medicon.controller.medic.PatientManagementController">
    <fx:define>
        <ToggleGroup fx:id="genderToggleGroup"/>
    </fx:define>

    <HBox spacing="20" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" AnchorPane.rightAnchor="20">
        <!-- 좌측 패널 -->
        <VBox prefWidth="280.0" minWidth="210" spacing="10">
            <Button fx:id="registerPatientButton" prefHeight="53.0" prefWidth="275.0" styleClass="button-blue" text="신규 고객 등록" /> <!-- onAction="#handleRegisterPatient" -->
            <Button fx:id="todayPatientButton" prefHeight="53.0" prefWidth="282.0" styleClass="button-blue" text="금일 고객 조회" /> <!-- onAction="#handleTodayPatients" -->

            <HBox spacing="5">
                <TextField fx:id="searchField" styleClass = "text-field" prefHeight="47.0" prefWidth="182.0" promptText="환자 이름" HBox.hgrow="ALWAYS" />
                <Button fx:id="searchButton" prefHeight="31.0" prefWidth="93.0" minWidth="90.0" styleClass="button-blue" text="검색" /> <!-- onAction="#handleSearch" -->
            </HBox>

            <ListView fx:id="patientListView" prefHeight="445.0" prefWidth="274.0" VBox.vgrow="ALWAYS" />
        </VBox>
        <!-- 중앙 패널 -->
        <VBox prefHeight="1000.0" prefWidth="500.0" minWidth="350" spacing="10" AnchorPane.bottomAnchor="20.0" AnchorPane.topAnchor="20.0">
        <Label maxWidth="Infinity" styleClass="section-title" text="환자 정보">
            </Label>
            <GridPane hgap="10" prefHeight="941.0" prefWidth="353.0" vgap="10">
                <Label styleClass="form-label" text="이름" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" styleClass = "text-field" prefHeight="35.0" prefWidth="219.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label styleClass="form-label" text="성별" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                <HBox fx:id="gender" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="1" spacing="10">

                    <RadioButton fx:id="btn_male" text="남자">
                        <toggleGroup>
                            <fx:reference source="genderToggleGroup"/>
                        </toggleGroup>
                    </RadioButton>

                    <RadioButton fx:id="btn_female" text="여자">
                        <toggleGroup>
                            <fx:reference source="genderToggleGroup"/>
                        </toggleGroup>
                    </RadioButton>
                </HBox>

                <Label styleClass="form-label" text="생년월일" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                <TextField fx:id="birthField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label styleClass="form-label" text="휴대전화" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                <TextField fx:id="phoneField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label styleClass="form-label" text="이메일" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
                <TextField fx:id="emailField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label styleClass="form-label" text="주소" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="5" />
                <TextField fx:id="addressField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label styleClass="form-label" text="상세주소" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="6" />
                <TextField fx:id="detailAddressField" styleClass = "text-field" prefHeight="35.0" prefWidth="220.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                <VBox.margin>
                    <Insets left="20.0" right="20"/>
                </VBox.margin>
            </GridPane>
          <HBox alignment="CENTER" spacing="10">
             <children>
                  <Button fx:id="changePatientButton" styleClass="button-blue" text="환자 정보 변경"> <!-- onAction="#handleChangePatient" -->
                   <HBox.margin>
                      <Insets right="10.0" />
                   </HBox.margin>
                  </Button>
                <Button fx:id="updatePatientButton" styleClass="button-lightblue" text="완료" />
             </children>
          </HBox>
        </VBox>
        <!-- 오른쪽 패널들 -->
        <VBox prefWidth="900">
            <HBox spacing="20"  prefHeight="450.0"  prefWidth="920.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                <!-- 오른쪽 패널: 문진 기록 -->
                <VBox spacing="10" minWidth="300">
                    <children>
                        <Label maxWidth="Infinity" styleClass="section-title" text="문진 기록" />
                        <GridPane hgap="10" prefHeight="578.0" prefWidth="600.0" vgap="10">
                            <Label styleClass="form-labelBig" text="주 증상 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />

                            <Label fx:id="symptomLabel" text="목 부음" styleClass="form-labelBig" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label styleClass="form-labelBig" text="과거 병력 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />

                            <Label fx:id="historyLabel" text="코로나" styleClass="form-labelBig" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label styleClass="form-labelBig" text="알레르기 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                            <Label fx:id="allergyLabel" text="갑각류" styleClass="form-labelBig" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label styleClass="form-labelBig" text="복용약 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
                            <Label fx:id="medicationLabel" text="텐텐" styleClass="form-labelBig" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                            <VBox.margin>
                                <Insets left="20.0" right="20"/>
                            </VBox.margin>
                        </GridPane>
                    </children>
                </VBox>

                <!-- 오른쪽 패널: 예약 일정 -->
                <VBox spacing="10">
                    <Label maxWidth="Infinity" styleClass="section-title" text="예약 일정" />
                    <GridPane hgap="10" prefHeight="578.0" prefWidth="600.0" vgap="10">
                        <Label styleClass="form-labelBig" text="날짜 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0" />
                        <Label fx:id="dateLabel" text="2024-07-03" styleClass="form-labelBig" GridPane.columnIndex="1"/>

                        <Label styleClass="form-labelBig" text="시간 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                        <Label fx:id="timeLabel" text="07 : 30" styleClass="form-labelBig" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label styleClass="form-labelBig" text="진료과 :" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                        <Label fx:id="departmentLabel" text="흉부외과"  styleClass="form-labelBig" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <VBox.margin>
                            <Insets left="20.0" right="20"/>
                        </VBox.margin>
                    </GridPane>
                </VBox>
            </HBox>
            <!-- 하단 패널: 방문 이력 -->
            <VBox prefHeight="400.0" prefWidth="920.0" spacing="10" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
                <children>
                    <Label maxWidth="Infinity" prefHeight="53.0" prefWidth="244.0" styleClass="section-title" text="방문 이력 조회" />
                    <ListView fx:id="historyListView" prefWidth="900.0" prefHeight="331.0" />
                </children>
            </VBox>
        </VBox>
    </HBox>
</AnchorPane>
